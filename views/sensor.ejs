    <div class="container">
      <section class="header">
        <h2 class="title">My Room</h2>
      </section>
      <h5>Information</h5>
    </div>
    <div class="registration" id="info">
      <div class="container">
          <%var dataArr = data.split(",");%>

          <%var sensorInfo = {pcs:'', ug:'', temperature:'', humidity:''};%>

          <%var max = 5;%>
          <%for(var i=1; i<max; i++){%>
            <%var infoArr = dataArr[i].split(":");%>
            <%sensorInfo[infoArr[0]]=infoArr[1];%>

            <div class="row">
              <div><h5><%=infoArr[0]%> : <%=sensorInfo[infoArr[0]]%></h5></div>
            </div>
          <%}%>



      </div>
    </div>
    <div class="container" id="back">
  		<a href="/rooms" data-rel="back">back</a>
    </div>

