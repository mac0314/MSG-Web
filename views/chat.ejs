  <body>

  <div data-role="page" id "iotmain">
  	<div data-role="content" id="content">
      <ul data-role="listview" data-child-pages="true"  data-filter="true" data-inset="true">
        <li data-role="list-divider"><h1>My Device</h1></li>
      </ul>
